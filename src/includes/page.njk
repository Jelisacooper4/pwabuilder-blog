<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta content="ie=edge" http-equiv="X-UA-Compatible"/>

    {# Google Schema #}
    <meta
      itemprop="name"
      content="{% if metaTitle %}{{ metaTitle }}{{
        ' | '
      }}{% endif %}{% if title %}{{ title }}{{
        ' | '
      }}{% endif %}{% if site.name %}{{ site.name }}{% endif %}"
/>
    <meta
      itemprop="description"
      content="{% if excerpt %}{{ excerpt }}{% else %}{{
        site.description
      }}{% endif %}"
/>

    {# Twitter #}
    <meta
      name="twitter:title"
      content="{% if metaTitle %}{{ metaTitle }}{{
        ' | '
      }}{% endif %}{% if title %}{{ title }}{{
        ' | '
      }}{% endif %}{% if site.name %}{{ site.name }}{% endif %}"
/>
    <meta name="twitter:card" content="summary_large_image"/>
    <meta
      name="twitter:description"
      content="{% if excerpt %}{{ excerpt }}{% else %}{{
        site.description
      }}{% endif %}"
/>
    <meta name="twitter:site" content="{{ site.author.handle }}"/>
    <meta name="twitter:creator" content="{{ site.author.handle }}"/>
    <meta
      name="twitter:image:src"
      content="{{ site.url }}{{ site.baseUrl }}{{ site.images.twitter }}"
/>

    {# Open Graph #}
    <meta
      name="og:title"
      content="{% if metaTitle %}{{ metaTitle }}{{
        ' | '
      }}{% endif %}{% if title %}{{ title }}{{
        ' | '
      }}{% endif %}{% if site.name %}{{ site.name }}{% endif %}"
/>
    <meta
      name="og:description"
      content="{% if excerpt %}{{ excerpt }}{% else %}{{
        site.description
      }}{% endif %}"
/>
    <meta
      name="og:image"
      content="{{ site.url }}{{ site.baseUrl }}{{ site.images.og }}"
/>
    <meta name="og:url" content="{{ site.url }}{{ site.baseUrl }}"/>
    <meta name="og:site_name" content="{{ site.name }}"/>
    <meta name="og:locale" content="en_GB"/>
    <meta name="og:type" content="website"/>

    <link type="image/x-icon" href="{{ site.baseUrl }}favicon.ico" rel="icon"/>

    <title>
      {% if metaTitle %}
        {{ metaTitle }}
      {% else %}
        {{ title }}
      {% endif %}
      {% if metaTitle or title %} | {% endif %}
      {{ site.name }}
    </title>

    <script
      src="https://unpkg.com/ionicons@5.4.0/dist/ionicons/ionicons.esm.js"
      type="module"
    ></script>
    <script
      src="https://unpkg.com/ionicons@5.4.0/dist/ionicons/ionicons.js"
      nomodule
    ></script>

    <link href="{{ site.baseUrl }}assets/main.bundle.css" rel="stylesheet"/>
    {% block head %}{% endblock %}
  </head>

  <body class="flex flex-col min-h-screen">
    {% block header %}
      {% include 'header.njk' %}
    {% endblock %}
    {% block subHeader %}
      {% include 'sub-header.njk' %}
    {% endblock %}
    <main class="container mx-auto px-8">
      {% block body %}
        {{ content | safe }}
      {% endblock %}
    </main>
    {% include "categories.njk" %}
    {% block footer %}
      {% include 'footer.njk' %}
    {% endblock %}
    <script src="https://unpkg.com/clipboard@2/dist/clipboard.min.js"></script>
    <script src="{{ site.baseUrl }}assets/main.bundle.js"></script>
  </body>
</html>