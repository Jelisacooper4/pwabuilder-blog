<section class="bg-secondary text-white h-72 my-8 py-4">
  <div class="container mx-auto px-8">
    <h3 class="text-center lg:text-left mb-4">Categories</h3>

    <ul class="grid grid-cols-2 lg:grid-cols-5 gap-1 justify-items-center lg:justify-items-start">
      {% for tag in collections.tagList | filterTagList %}
        <li class="px-2 py-4">
          {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="capitalize">{{ tag }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

</section>